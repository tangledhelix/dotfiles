[
    {
        "name": "Install vimrc",
        "template": {
            "src": "vimrc.j2",
            "dest": "~/.vimrc",
            "mode": "0644"
        },
        "tags": [ "vim" ]
    },
    {
        "name": "Install vim directory",
        "synchronize": {
            "src": "vim/",
            "dest": "~/.vim",
            "delete": "yes",
            "rsync_opts": [
                "--exclude=.git"
            ]
        },
        "tags": [ "vim" ]
    }
]

